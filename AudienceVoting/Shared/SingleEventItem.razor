@if (EventItem != null)
{
  @if (!IsEditing)
  {
    <div class="row">
    <div class="col"><b>@EventItem.Name</b></div> 
    <div class="col">Vote for: @EventItem.NumTeamsToVoteFor</div>
    <div class="col">
    @if (EventItem.IsActive)
    {
      <span>Active</span>
    }
    else 
    {
      <button enabled="@(!IsDeleting)" @onclick="OnMakeActiveButtonClickedAsync" aria-label="Make Active">
        Make Active Event
      </button>
    }
    </div>
    <div class="col">
    <button enabled="@(!IsDeleting)" @onclick="OnEditButtonClicked" aria-label="Edit">
      <span class="oi oi-pencil" aria-hidden="true"></span>
    </button>
    <button enabled="@(!IsDeleting)" @onclick="OnDeleteButtonClickedAsync" aria-label="Delete">
      <span class="oi oi-trash" aria-hidden="true"></span>
    </button>
    </div>
    </div>
  }
  else
  {
    <form class="form-inline" @onsubmit="OnSaveButtonClickedAsync">
        <input type="text" id="eventName" @bind="EventItem.Name" />
        <input id="eventNumVotes" type="number" min="1" @bind="EventItem.NumTeamsToVoteFor" />
        <button type="submit" aria-label="Save"><span class="oi oi-check" aria-hidden="true"></span></button>
    </form>
  }
}
